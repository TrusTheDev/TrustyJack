<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trusthecode.trustyjack.controllers.ViewController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
   <children>
      <HBox VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS">
         <children>
            <StackPane fx:id="boardStackPane" StackPane.alignment="CENTER" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity">
               <children>
                  <VBox fx:id="boardBox" spacing="10.0" VBox.vgrow="ALWAYS" HBox.hgrow="ALWAYS" maxWidth="Infinity" maxHeight="Infinity">
                     <children>
                        <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox VBox.vgrow="ALWAYS">
                                 <children>
                                    <Label maxWidth="Infinity" prefWidth="80.0" text="Crupier">
                                       <font>
                                          <Font name="System Bold" size="22.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="Cscore" text="0" />
                                 </children>
                              </VBox>
                              <!-- Las cartas del crupier -->
                              <ImageView fx:id="Ccard1" fitHeight="150.0" fitWidth="114.0" preserveRatio="true" />
                              <ImageView fx:id="Ccard2" fitHeight="150.0" fitWidth="114.0" preserveRatio="true" />
                              <ImageView fx:id="Ccard3" fitHeight="150.0" fitWidth="114.0" preserveRatio="true" />
                              <ImageView fx:id="Ccard4" fitHeight="150.0" fitWidth="114.0" preserveRatio="true" />
                           </children>
                        </HBox>

                        <!-- Espaciador -->
                        <HBox spacing="10.0" HBox.hgrow="ALWAYS">
                           <children>
                              <VBox>
                                 <children>
                                    <Label maxWidth="Infinity" prefWidth="80.0" text="You">
                                       <font>
                                          <Font name="System Bold" size="22.0" />
                                       </font>
                                    </Label>
                                    <Label fx:id="Pscore" text="0" />
                                 </children>
                              </VBox>
                              <!-- Las cartas del jugador -->
                              <ImageView fx:id="Pcard1" fitHeight="150.0" fitWidth="114.0" onMouseClicked="#clickCard1" preserveRatio="true">
                                 <cursor>
                                    <Cursor fx:constant="OPEN_HAND" />
                                 </cursor>
                                 <effect>
                                    <Glow />
                                 </effect>
                              </ImageView>
                              <ImageView fx:id="Pcard2" fitHeight="150.0" fitWidth="114.0" onMouseClicked="#clickCard2" preserveRatio="true">
                                 <cursor>
                                    <Cursor fx:constant="OPEN_HAND" />
                                 </cursor>
                              </ImageView>
                              <ImageView fx:id="Pcard3" fitHeight="150.0" fitWidth="114.0" onMouseClicked="#clickCard3" preserveRatio="true">
                                 <cursor>
                                    <Cursor fx:constant="OPEN_HAND" />
                                 </cursor>
                              </ImageView>
                              <ImageView fx:id="Pcard4" fitHeight="150.0" fitWidth="114.0" onMouseClicked="#clickCard4" preserveRatio="true">
                                 <cursor>
                                    <Cursor fx:constant="OPEN_HAND" />
                                 </cursor>
                              </ImageView>
                           </children>
                        </HBox>

                        <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="ALWAYS">
                           <children>
                              <Button mnemonicParsing="false" onMouseClicked="#PlayerHit" text="Hit" maxWidth="Infinity">
                                 <font>
                                    <Font size="17.0" />
                                 </font>
                              </Button>
                              <Button mnemonicParsing="false" onMouseClicked="#StandOnClick" text="Stand" maxWidth="Infinity">
                                 <font>
                                    <Font size="17.0" />
                                 </font>
                              </Button>
                           </children>
                        </HBox>
                     </children>
                  </VBox>

                  <Label fx:id="winOrLoseSign">
                     <font>
                        <Font size="50.0" />
                     </font>
                  </Label>
               </children>
            </StackPane>

            <VBox VBox.vgrow="ALWAYS" spacing="10.0">
               <children>
                  <HBox alignment="CENTER" opacity="0.0">
                     <children>
                        <Label alignment="CENTER" contentDisplay="CENTER" text="score:">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                        <Label text="0">
                           <font>
                              <Font size="24.0" />
                           </font>
                        </Label>
                     </children>
                  </HBox>
                  <VBox alignment="TOP_CENTER" VBox.vgrow="ALWAYS">
                     <children>
                        <Button alignment="CENTER" contentDisplay="CENTER" maxWidth="Infinity" mnemonicParsing="false" onMouseClicked="#RestartBtn" text="Restart">
                           <font>
                              <Font size="28.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</VBox>

